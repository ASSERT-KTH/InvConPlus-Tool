transfer(recipient,amount):
Requires		msg.sender != address(0)
Requires		recipient != address(0)
Requires		VeriSol.Old(_balances[msg.sender]) >= amount
Ensures		_balances[msg.sender] <= VeriSol.Old(_balances[msg.sender])
Ensures		_balances[recipient] >= VeriSol.Old(_balances[recipient])
Ensures		_balances[recipient] >= amount
Ensures		VeriSol.Old(_totalSupply) == _totalSupply
Ensures		VeriSol.Old(VeriSol.SumMapping(_balances)) == VeriSol.SumMapping(_balances)
approve(spender,value):
Requires		msg.sender != address(0)
Requires		spender != address(0)
Ensures		_allowances[msg.sender][spender] == value
Ensures		VeriSol.Old(_totalSupply) == _totalSupply
transferFrom(sender,recipient,amount):
Requires		msg.sender != address(0)
Requires		recipient != address(0)
Requires		sender != address(0)
Requires		VeriSol.Old(_balances[recipient]) != VeriSol.Old(_allowances[sender][msg.sender])
Requires		amount <= VeriSol.Old(_balances[sender])
Requires		amount <= VeriSol.Old(_allowances[sender][msg.sender])
Requires		VeriSol.Old(_balances[sender]) != VeriSol.Old(_allowances[sender][msg.sender])
Ensures		_balances[recipient] >= VeriSol.Old(_balances[recipient])
Ensures		_balances[recipient] >= amount
Ensures		_balances[sender] <= VeriSol.Old(_balances[sender])
Ensures		VeriSol.Old(_totalSupply) == _totalSupply
Ensures		VeriSol.Old(VeriSol.SumMapping(_balances)) >= VeriSol.SumMapping(_balances)
Ensures		_allowances[sender][msg.sender] <= VeriSol.Old(_allowances[sender][msg.sender])
